bundle common inventory_os
{
vars:
  "description" string => ifelse(
                                 and( isvariable("inventory_lsb.os"), isvariable("inventory_lsb.release") ),
                                 "$(inventory_lsb.os) $(inventory_lsb.release)",
                                 "$(sys.flavor) (LSB missing)"
                                 ),
                  meta => { "inventory", "attribute_name=OS" };

}
